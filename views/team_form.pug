extends layout 

block content 
  h1=title 


  form(method='POST' action='')
    label(for='name') Team Name:
    input(type='text' placeholder ='Team Name' name='name' required='true' value=(undefined===team ? '': team.name))
    select(name="leagues" required='true')
      if(undefined==old_league)
        option(value=undefined) Choose a League 
      else 
        option(value=league._id) !{league.name}
      each league_val in leagues
        option(value=league_val._id) !{league_val.name}
    button(type="submit") Submit

  if errors
    ul 
      for error in errors 
        li!=error.msg