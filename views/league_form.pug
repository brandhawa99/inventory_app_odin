extends layout 

block content 
  h1=title 


  form(method='POST' action='')
    label(for='name') League Name:
    input(type='text' placeholder='League Name' name='name' required='true' value=(undefined===league ? '': league.name))
    button(type="submit") Submit

  if errors
    ul 
      for error in errors 
        li!=error.msg